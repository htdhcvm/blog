nav
    div(class="container")
        a(href="/")
            img(src="/img/logo-dark.png", alt="")
        div(class="navigateMenu")
            div(class="search")
                input(type="text", name="" placeholder="Search")
            div(class="action")
                if data.auth.status
                    div(class="dropdown")
                        button(class="dropbtn")=data.auth.name
                        div(class="dropdown-content")
                            a(href=`/settings/${data.auth.name}`) Settings
                            a(href="/write-post") Write post
                            a(href="/chat") Chat
                            a(href="/logout") Logout
                else 
                    a(class="btn-signin" href="/signin") Sign in
                    a(class="btn-signup" href="/signup") Sign up
